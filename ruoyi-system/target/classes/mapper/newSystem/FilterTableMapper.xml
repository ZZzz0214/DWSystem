<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FilterTableMapper">

	<!-- 定义结果映射 -->
	<resultMap id="FilterTableMap" type="com.ruoyi.common.core.domain.newEntity.FilterTable">
		<id property="orderNumber" column="order_number"/>
		<result property="productName" column="product_name"/>
		<result property="specification" column="specification"/>
		<result property="quantity" column="quantity"/>
		<result property="productCode" column="product_code"/>
		<result property="memberRemarks" column="member_remarks"/>
		<result property="groupLeader" column="group_leader"/>
		<result property="filter" column="filter"/>
		<result property="date" column="date"/>
		<result property="itemName" column="item_name"/>
		<result property="multiple" column="multiple"/>
		<result property="afterSalesStatus" column="after_sales_status"/>
		<result property="remarks" column="remarks"/>
		<result property="internalProductCode" column="internal_product_code"/>
		<result property="createBy"     column="create_by"    />
		<result property="createTime"   column="create_time"  />
		<result property="updateBy"     column="update_by"    />
		<result property="updateTime"   column="update_time"  />
	</resultMap>

	<!-- SQL 查询语句 -->
	<sql id="selectFilterTable">
		SELECT
			order_number,
			product_name,
			specification,
			quantity,
			product_code,
			member_remarks,
			group_leader,
			filter,
			date,
			item_name,
			multiple,
			after_sales_status,
			remarks,
			internal_product_code
		FROM filter_table
	</sql>

	<!-- 根据条件查询所有FilterTable -->
	<select id="selectAllFilterTables" resultMap="FilterTableMap">
		<include refid="selectFilterTable"/>
		WHERE 1=1
		<if test="orderNumber != null and orderNumber != 0">
			AND order_number = #{orderNumber}
		</if>
		<if test="productName != null and productName != ''">
			AND product_name = #{productName}
		</if>
		<if test="specification != null and specification != ''">
			AND specification = #{specification}
		</if>
		<if test="quantity != null">
			AND quantity = #{quantity}
		</if>
		<if test="productCode != null and productCode != ''">
			AND product_code = #{productCode}
		</if>
		<if test="memberRemarks != null and memberRemarks != ''">
			AND member_remarks = #{memberRemarks}
		</if>
		<if test="groupLeader != null and groupLeader != ''">
			AND group_leader = #{groupLeader}
		</if>
		<if test="filter != null and filter != ''">
			AND filter = #{filter}
		</if>
		<if test="date != null">
			AND date = #{date}
		</if>
		<if test="itemName != null and itemName != ''">
			AND item_name = #{itemName}
		</if>
		<if test="multiple != null">
			AND multiple = #{multiple}
		</if>
		<if test="afterSalesStatus != null and afterSalesStatus != ''">
			AND after_sales_status = #{afterSalesStatus}
		</if>
		<if test="remarks != null and remarks != ''">
			AND remarks = #{remarks}
		</if>
		<if test="internalProductCode != null and internalProductCode != ''">
			AND internal_product_code = #{internalProductCode}
		</if>
	</select>

	<!-- 根据ID查询单个FilterTable -->
	<select id="selectFilterTableById" parameterType="String" resultMap="FilterTableMap">
		<include refid="selectFilterTable"/> WHERE order_number = #{orderNumber}
	</select>

	<!-- Insert -->
	<insert id="insertFilterTable" parameterType="com.ruoyi.common.core.domain.newEntity.FilterTable" useGeneratedKeys="true" keyProperty="orderNumber">
		INSERT INTO filter_table (
		<if test="productName != null">product_name,</if>
		<if test="specification != null">specification,</if>
		<if test="quantity != null">quantity,</if>
		<if test="productCode != null">product_code,</if>
		<if test="memberRemarks != null">member_remarks,</if>
		<if test="groupLeader != null">group_leader,</if>
		<if test="filter != null">filter,</if>
		<if test="date != null">date,</if>
		<if test="itemName != null">item_name,</if>
		<if test="multiple != null">multiple,</if>
		<if test="afterSalesStatus != null">after_sales_status,</if>
		<if test="remarks != null">remarks,</if>
		<if test="internalProductCode != null">internal_product_code,</if>
		create_time
		) VALUES (
		<if test="productName != null">#{productName},</if>
		<if test="specification != null">#{specification},</if>
		<if test="quantity != null">#{quantity},</if>
		<if test="productCode != null">#{productCode},</if>
		<if test="memberRemarks != null">#{memberRemarks},</if>
		<if test="groupLeader != null">#{groupLeader},</if>
		<if test="filter != null">#{filter},</if>
		<if test="date != null">#{date},</if>
		<if test="itemName != null">#{itemName},</if>
		<if test="multiple != null">#{multiple},</if>
		<if test="afterSalesStatus != null">#{afterSalesStatus},</if>
		<if test="remarks != null">#{remarks},</if>
		<if test="internalProductCode != null">#{internalProductCode},</if>
		sysdate()
		)
	</insert>
	<!-- 更新FilterTable -->
	<update id="updateFilterTable" parameterType="com.ruoyi.common.core.domain.newEntity.FilterTable">
		UPDATE filter_table
		<set>
			<if test="productName != null">product_name = #{productName},</if>
			<if test="specification != null">specification = #{specification},</if>
			<if test="quantity != null">quantity = #{quantity},</if>
			<if test="productCode != null">product_code = #{productCode},</if>
			<if test="memberRemarks != null">member_remarks = #{memberRemarks},</if>
			<if test="groupLeader != null">group_leader = #{groupLeader},</if>
			<if test="filter != null">filter = #{filter},</if>
			<if test="date != null">date = #{date},</if>
			<if test="itemName != null">item_name = #{itemName},</if>
			<if test="multiple != null">multiple = #{multiple},</if>
			<if test="afterSalesStatus != null">after_sales_status = #{afterSalesStatus},</if>
			<if test="remarks != null">remarks = #{remarks},</if>
			<if test="internalProductCode != null">internal_product_code = #{internalProductCode}</if>
			update_time = sysdate()
		</set>
		WHERE order_number = #{orderNumber}
	</update>

	<!-- 删除FilterTable -->
	<delete id="deleteFilterTableById" parameterType="long">
		DELETE FROM filter_table WHERE order_number = #{orderNumber}
	</delete>

	<!-- 根据多个ID删除FilterTable -->
	<delete id="deleteFilterTablesByIds" parameterType="long">
		DELETE FROM filter_table WHERE order_number IN
		<foreach collection="array" item="orderNumber" open="(" separator="," close=")">
			#{orderNumber}
		</foreach>
	</delete>
 	
</mapper> 